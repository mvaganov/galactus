[
  Z.Dialog{name:intro,commands:[
      {desc:'the first dialog'}
      Z.Say {text: 'Welcome to Nonstandard Assets!\nWhat would you like information about?',
        keepOnScreen: true}
      Z.Option{next:timer,text:'Timer: time-keeping and setTimeout functionality'}
      Z.Option{next:omu,  text:'OMU: Object Modeling for Unity'}
      Z.Option{next:noisy,text:'Noisy: interactive sound scripting'}
      Z.Option{next:ztory,text:'Z: Ztory scripting'}
      Z.Option{next:platf,text:'Platformer: the 3D, first-through-third, gravity-adjustable character controller'}
      Z.Option{next:cmd,  text:'CmdLine: the Command Line emulator'}
      Z.Option{next:lines,text:'Lines: the 3d line drawing library'}
      Z.Option{next:spati,text:'Spatial: the 3d gemoetry library'}
      Z.Option{next:conti,text:'Contingency: rich object-interaction behaviors that reduce the need for C# scripting'}
      Z.Option{commands:[exit], text:'exit'}
    ]
  }
  Z.Dialog{name:timer,commands:[
    Z.Say{text:'The NS.Timer was one of the first pieces of code developed for the Nonstandard Library.'
    Z.Say{text:'There are just too many uses for having a timed-callback system, (like JavaScript\'s setTimeout) and it was pretty surprising that Unity did not have one by default.'}
    Z.Say{text:'NS.Timer is intended to be used within C# scripts, though it can also be used as a MonoBehaviour, to cause an object or event to occur in some interval or time. Many kinds of objects can be \'executed\' at a specific time, thanks to the Contingency system.'}
    Z.Option{next:intro,text:'main menu'}
  ]}
  Z.Dialog{name:omu,commands:[
    Z.Say{text:'OMU, or Object Modeling for Unity, is a system that uses a JSON-like script to serialize and de-serialize C# objects.'},
    Z.Say{text:'OMU is most useful for deserializing data structures into a human-readable, but still highly-compact script, for saving, or transmitting over the internet'},
    Z.Say{text:'The script that was used to generate this dialog-system is written using OMU. The format of the script is based on the C# datastructures used in the Ztory system'},
    Z.Option{next:intro,text:'main menu'}
  ]}
]